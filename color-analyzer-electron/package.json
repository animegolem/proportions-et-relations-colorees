{
  "name": "color-analyzer-electron",
  "version": "1.0.0",
  "description": "Scientific Color Analysis Tool - Cross-platform Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["color", "analysis", "science", "visualization", "three.js"],
  "author": {
    "name": "L. JÃ©gou",
    "email": "laurent.jegou@univ-tlse2.fr",
    "url": "http://couleurs.hypotheses.org"
  },
  "homepage": "https://github.com/university/color-analyzer-electron",
  "license": "CC-BY-3.0",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.univ-tlse2.color-analyzer",
    "productName": "Color Analyzer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "app/**/*",
      "assets/icon.*"
    ],
    "extraResources": [
      {
        "from": "app",
        "to": "app"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Education",
      "maintainer": "laurent.jegou@univ-tlse2.fr"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "Color Analyzer ${version}",
      "icon": "assets/icon.png"
    }
  }
}
